<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sign_in_background"
    tools:context=".Transfer">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:text="Transfer"
        android:textSize="35dp"

        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:id="@+id/Transfer"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="95dp"
        android:text="To:"
        android:textSize="20dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:id="@+id/To"
        />

    <EditText
        android:id="@+id/account1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/To"
        android:layout_marginStart="18dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="18dp"
        android:background="#30ffffff"
        android:drawablePadding="20dp"
        android:drawableLeft="@drawable/baseline_person_24"
        android:hint="Account #1"
        android:maxLength="17"
        android:inputType="number"
        android:padding="10dp"
        android:textColorHint="@color/black" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/account1"
        android:text="From:"
        android:textSize="20dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:id="@+id/From"
        />

    <EditText
        android:id="@+id/account2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/From"
        android:layout_marginStart="18dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="18dp"
        android:background="#30ffffff"
        android:drawableLeft="@drawable/baseline_person_24"
        android:maxLength="17"
        android:drawablePadding="20dp"
        android:hint="Account #2"
        android:inputType="number"
        android:padding="10dp"
        android:textColorHint="@color/black" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/account2"
        android:text="Amount"
        android:textSize="20dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:id="@+id/amountText"
        />

    <EditText
        android:id="@+id/amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/amountText"
        android:layout_marginStart="18dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="18dp"
        android:background="#30ffffff"
        android:drawableLeft="@drawable/baseline_attach_money_24"
        android:drawablePadding="20dp"
        android:hint="Amount"
        android:inputType="text"
        android:padding="10dp"
        android:textColorHint="@color/black"/>

    <Button
        android:id="@+id/transferButton"
        android:layout_width="110dp"
        android:layout_height="80dp"
        android:layout_below="@id/amount"
        android:layout_marginBottom="50dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/black"
        android:gravity="center"
        android:text="Transfer"
        android:textColor="@color/white"
        android:textSize="14dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        >

        <Button
            android:id="@+id/Go_Back_Button"
            android:layout_width="411dp"
            android:layout_height="137dp"
            android:backgroundTint="@color/black"
            android:text="Home"
            android:textColor="@color/white"
            android:textSize="45dp" />

    </LinearLayout>

</RelativeLayout>